# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_or_group_id

# Gemini API Configuration (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here

# Grok API Configuration (xAI)
GROK_API_KEY=your_grok_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/writing-assistant
MONGODB_DB_NAME=writing_assistant

# AI Model Configuration
# 默认模型：Gemini 2.5 Flash (高并发，简单快速)
MODEL_DEFAULT=gemini-2.5-flash

# 复杂问题模型：Gemini 3 Pro (深度分析)
MODEL_COMPLEX=gemini-3-pro-preview

# 娱乐喷子模型：Grok Beta (幽默风趣)
MODEL_ROAST=grok-beta

# 智能路由器配置
# 字数阈值：超过此值考虑使用复杂模型
COMPLEXITY_WORD_THRESHOLD=100

# 关键词触发复杂模型（逗号分隔）
COMPLEXITY_KEYWORDS=分析,深入,详细,研究,为什么,怎么理解,言外之意,潜台词,背后含义

# 关键词触发喷子模型（逗号分隔）
ROAST_KEYWORDS=喷,吐槽,搞笑,娱乐,开玩笑,幽默

# 应用配置
PORT=3000
NODE_ENV=production

# 日志配置
LOG_LEVEL=info

# 向量搜索配置
VECTOR_DIMENSION=768
VECTOR_SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=5
